<ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/articles/list">Articles</a></li>
        <li class="breadcrumb-item active">Add</li>
    </ol>
    <h1 class="display-4">Add Article</h1>
    <form action="/update/<%= article[0].id %>" method="post">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" name="title" value="<%= article[0].title %>" class="form-control">
        </div>
        <div class="form-group">
            <label for="body">Title</label>
            <textarea name="body" class="form-control"><%= article[0].body %></textarea>
        </div>
        <input type="submit" value="submit" class="btn btn-primary">
    </form>
